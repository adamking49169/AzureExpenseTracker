@using Microsoft.AspNetCore.Authentication
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">ExpenseTracker</a>
            <div>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="text-light me-3">Hi, @User.Identity!.Name</span>
                    <form method="post" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                        <button class="btn btn-outline-light btn-sm">Sign out</button>
                    </form>
                }
                else
                {
                    <form method="post" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                        <button class="btn btn-outline-light btn-sm">Sign in</button>
                    </form>
                }
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
