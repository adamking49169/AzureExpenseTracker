@model ExpenseTracker.Web.Controllers.ExpensesController.CreateExpenseVm
@{
    ViewData["Title"] = "Add Expense";
}
<h2>Add Expense</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3"><label>Date</label><input asp-for="Date" type="date" class="form-control" /></div>
    <div class="mb-3"><label>Category</label><input asp-for="Category" class="form-control" /></div>
    <div class="mb-3"><label>Description</label><input asp-for="Description" class="form-control" /></div>
    <div class="mb-3"><label>Amount</label><input asp-for="Amount" type="number" step="0.01" class="form-control" /></div>
    <div class="mb-3"><label>Receipt (optional)</label><input asp-for="Receipt" type="file" class="form-control" /></div>
    <button class="btn btn-primary">Save</button>
</form>
